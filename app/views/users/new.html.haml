= provide(:title, 'Sign up')
%h1 Sign up

= form_for(@user) do |f|
	= render 'shared/error_messages'
	%div.field
		= f.label :name
		%br
		= f.text_field :name 
	%div.field
		= f.label :email
		%br 
		= f.text_field :email 
		%br
		%d.field
		= f.label :password 
		%br
		= f.password_field :password 
	%div.field
		= f.label :password_confirmation, "Confirmation"
		%br
		= f.password_field :password_confirmation
	%div.actions
		= f.submit "Sign up" 
